<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_faq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.teamnovelvn.sakuranovel.Activity.FaqActivity">

    <TextView
        android:text="FAQ"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:id="@+id/txtvFAQ" />

    <TextView
        android:text="Sakura Novel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtvFAQ"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/txtvFAQFOR" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@id/txtvFAQFOR">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="1.Tại sao khi tôi mở ứng dụng không thấy hiện gì cả."
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview1"/>
            <TextView
                android:id="@+id/textview2"
                android:text="-Bạn phải đảm bảo điện thoại có kết nối wifi hoặc 3G, và đợi vài giây nó sẽ hiện lên hình ảnh và tên truyện cho bạn"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textview3"
                android:text="2.Tôi có thể thay đổi kích cỡ chữ khi đọc truyện không, nó hơi nhỏ so với tôi"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textview4"
                android:text="-Bạn có thể thay đổi dựa vào 4 lựa chọn chúng tôi đã đề ra,'Nhỏ','Bình thường','Lớn','Cực lớn', ở ngay tai giao diện đọc truyện"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textview5"
                android:text="3.Tôi có thể Download truyện về để khi tôi không có mạng để xem được không?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textview6"
                android:text="-Yes,Bạn có thể download truyện về, nhưng muốn download được bạn phải đăng nhập vào ứng dụng của chúng tôi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textview7"
                android:text="4.Truyện tôi đang theo dõi đã bị xóa,tai sao?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textview8"
                android:text="-Vì 1 vài lí do, bạn có thể gửi Feedback về cho chúng tôi tên truyện đã bị xóa(hoặc chap nào đó),chúng tôi sẽ cập nhật lại sớm nhất,chúng tôi thành thật xin lỗi vì sự cố này"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />






        </LinearLayout>

    </ScrollView>
</RelativeLayout>
