<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blackgew"
    tools:context="com.android.teamnovelvn.sakuranovel.Activity.InfoActivity" >

    <ImageView
        android:id="@+id/imghinhtruyenInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team: Nhóm 5"
        android:textColor="@color/yellow"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_above="@+id/textView4"
        android:layout_marginBottom="16dp"
        android:layout_alignStart="@+id/txtTenTruyenChinh" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yêu cầu thiết bị: Android 4.4+"
        android:textColor="@color/yellow"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_above="@+id/textView2"
        android:layout_marginBottom="16dp"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version: 1.0.0"
        android:textColor="@color/yellow"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_above="@+id/textView3"
        android:layout_marginBottom="16dp"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright 2016"
        android:textColor="@color/yellow"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginBottom="69dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/txtTenTruyenChinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Name: Sakura Novel "
        android:textColor="@color/yellow"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

